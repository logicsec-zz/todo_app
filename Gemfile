source 'https://rubygems.org'


gem 'rails'
gem 'pg'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'
gem 'slim'
gem 'active_model_serializers'
gem 'jquery-ui-rails', '5.0.5'
gem 'acts_as_list'

#Fixes For Windows
gem 'bcrypt', git: 'https://github.com/codahale/bcrypt-ruby.git', :require => 'bcrypt'
gem 'tzinfo-data'

# Use Devise for authentication
gem 'devise'

# OmniAuth Gems
gem 'omniauth-facebook'
